#
#
#	$Id: yMakefile,v 1.7 1993-03-26 23:19:22 haley Exp $
#
#
#	Makefile for cgm filters -- filter between NCAR CGM and vanilla CGM
#
#

NCARG = ../../../..

MYNAME	= filter

#if defined(Solaris) && defined(sun4)
GENLIBS = /usr/ucblib/libucb.a
#endif

LIBS		= $(LIBPATH)/libcgm.a $(LIBPATH)/libncarg_c.a $(GENLIBS)

CDEFINES	= -I../../include

CGM2_SRCS	= cgm2ncgm.c
NCAR2_SRCS	= ncgm2cgm.c 

CGM2_OBJ	= cgm2ncgm.o
NCAR2_OBJ	= ncgm2cgm.o

all::	cgm2ncgm ncgm2cgm 

CTarget(cgm2ncgm,$(CGM2_OBJ),$(LIBS))
CTarget(ncgm2cgm,$(NCAR2_OBJ),$(LIBS))
MakefileTarget
CleanTarget

lint:	
	$(LINT) $(CDEFINES) $(NCAR2_SRCS) 1> lint.out 2>&1
	$(LINT) $(CDEFINES) $(CGM2_SRCS) 1>> lint.out 2>&1

cgm2ncgm.o:	filter.h
