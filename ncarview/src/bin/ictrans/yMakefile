NCARG		= ../../../..

MYNAME		= ictrans

#
#	X11 libraries
#
#ifdef BuildXlibDependentCode
X11LIBS		= $(XLIB)
#endif BuildXlibDependentCode

#
#	Sun SunView libraries
#
#ifdef BuildSunViewctrans
SUNLIBS		= -lsuntool -lsunwindow -lpixrect
#endif

#
#	local libraries
#
LOCLIB		= $(ROBJPATH)/libictrans_.o $(ROBJPATH)/libctrans.o \
		$(LIBPATH)/libcgm.a $(LIBPATH)/libncarg_ras.a \
		$(LIBPATH)/libncarg_c.a

#ifdef  sgi
GENLIBS		= $(NETCDFLIB) $(HDFLIB) -lm -lmalloc
#else
GENLIBS		= $(NETCDFLIB) $(HDFLIB) -lm
#endif

LIBS		= $(LOCLIB) $(X11LIBS) $(SUNLIBS) $(GENLIBS)

SRCS		= main.c 
OBJS		= main.o 



all::
	@$(CAT) Copyright

all::	$(MYNAME)

CTarget($(MYNAME),$(OBJS),$(LIBS))
MakefileTarget
CleanTarget

lint: $(HDR) $(SRCS)
	lint $(CDEFINES) $(LINTLIBS) $(SRCS)  1> lint.out 2>&1
#	lint $(SRCS) $(LIBS) > lint.out
