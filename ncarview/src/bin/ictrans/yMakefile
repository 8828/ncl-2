
MYNAME		= ictrans

#
#	X11 libraries
#
#ifdef BuildXlibDependentCode
X11LIBS		= $(XLIB)
#endif BuildXlibDependentCode

#
#	Sun SunView libraries
#
#ifdef BuildSunViewctrans
SUNLIBS		= -lsuntool -lsunwindow -lpixrect
#endif

#
#	local libraries
#
PROG_LIBS	=	$(ICTRANS_LIB) $(CTRANSLIB) $(CGMLIB) $(NCARGRASLIB) \
			$(NCARGCLIB)
DEP_LIBS	=	$(DEPICTRANS_LIB) $(DEPCTRANSLIB) $(DEPCGMLIB) \
			$(DEPNCARGRASLIB) $(DEPNCARGCLIB)

#ifdef  sgi
MORE_LIBS	= -lmalloc
#endif

EXTRA_LIBS	= $(X11LIBS) $(SUNLIBS) $(NETCDFLIB) $(HDFLIB)
SYS_LIBS	= -lm $(MORE_LIBS)

SRCS		= main.c 
OBJS		= main.o 

all::
	@$(CAT) Copyright

CProgram($(MYNAME),$(OBJS),$(DEP_LIBS))
DependTarget($(SRCS))

lint: $(HDR) $(SRCS)
	lint $(CDEFINES) $(LINTLIBS) $(SRCS)  1> lint.out 2>&1
#	lint $(SRCS) $(LIBS) > lint.out
