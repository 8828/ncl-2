#!/bin/csh -f
#
#	$Id: ctlib,v 1.9 1991-09-18 17:37:23 clyne Exp $
#
#
#	This script simply reports the libraries required by ctrans.
#	The library list will vary depending on machine configuration
#

set libdir = `ncargpar LIBDIR`

if ($status != 0) then
	exit 1
endif

if (! -d "$libdir") then
  echo "Library directory <$libdir> does not exist."
  exit 1
endif

set locals = ""

foreach file (libictrans.o libctrans.o libcgm.a libncarv.a  libncarg_ras.a libhdf.a)
  set locals = "$locals $libdir/$file"
end

echo $locals -lX11  -lsuntool -lsunwindow -lpixrect -lm
