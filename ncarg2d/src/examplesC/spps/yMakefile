CSRCS = c_fspponts.c c_fsppoint.c c_sprevx.c c_splogy.c c_fspline.c \
	c_fcoord1.c c_fcoord2.c c_fcoord.c c_fspcurve.c

SED_SRCS = c_spps.c

GENERIC_SRCS = $(CSRCS) $(SED_SRCS)

InstallTarget($(GENERIC_SRCS),$(INSTALL_LIB),$(EXAMPLESPATH))
CleanFilesTarget($(SED_SRCS))

#
# Files containing C functions that are called from FORTRAN or that have to
# be modified to include a macro from the configuration file.
#

c_spps.c: c_spps.c.sed Makefile
	@-$(RM) $@
	@$(CALLCONV) $(SYSTEM_INCLUDE) $@ cmfx cmfy cmux cmuy cpfx cpfy cpux cpuy \
		kfmx kfmy kumx kumy kfpx kfpy kupx kupy kmpx kmpy kpmx kpmy cfux cfuy \
		cufx cufy
