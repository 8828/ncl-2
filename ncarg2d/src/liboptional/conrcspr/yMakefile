NCARG	= ../../../..

MYNAME	= conrcspr

GENERIC_SRCS = \
	conrec.f clgen.f crdrln.f minmax.f reord.f stline.f calcnt.f \
	ezcntr.f conbd.f

GENERIC_OBJS = \
	conrec.o clgen.o crdrln.o minmax.o reord.o stline.o calcnt.o \
	ezcntr.o conbd.o

SOURCES = $(GENERIC_SRCS)

OBJECTS = $(GENERIC_OBJS)

RelocatableTarget(libconrcspr.o,$(OBJECTS))

#ifdef  BuildNCARGSourceLibrary
install:: $(SOURCES)
	@-$(RM) $(LIBPATH)/srcconrcspr.a
	@echo "$(SOURCES)" > $(MYNAME)
	@$(AR_SRC_CHECK) $(LIBPATH)/srcconrcspr.a $(MYNAME) $(SOURCES)
	$(RANLIB) $(LIBPATH)/srcconrcspr.a
	@-$(RM) $(MYNAME)
#endif
