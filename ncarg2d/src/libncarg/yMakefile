#	Makefile for libncarg.a
#	Includes utilities and their corresponding test programs,
#	and SPPS.
#

#define IHaveSubdirs

SUBDIRS = \
	areas autogrph colconv common concom conpack conran \
	conrec conterp dashchar dashpack ezmap ezmapa gflash gridal \
	hafton histgr isosrf isosrfhr labelbar ngmisc plotchar \
	polypack pwritx pwrity pwrzi pwrzs pwrzt softfill spps \
	srface stitle strmln support threed velvct wmap

PartialLibraryRoot(libncarg.a,$(SUBDIRS))
PartialSourceLibraryRoot(srcncarg.a,$(SUBDIRS))

BuildSharedPartialFromArch(libNGmisc,libNGmisc.a,1,0,NullArgument)
BuildSharedPartialFromArch(libNGmisc2,libNGmisc2.a,1,0,NullArgument)
BuildSharedPartialFromArch(libNGmp,libNGmp.a,1,0,NullArgument)
BuildSharedPartialFromArch(libNGff,libNGff.a,1,0,-lNGmp)
BuildSharedPartialFromArch(libNGcn,libNGcn.a,1,0,-lNGmp)
BuildSharedFromArch(libNGllu,libNGllu.a,1,0,-exports -lNGcn -exports -lNGff -exports -lNGmp -exports -lNGmisc -exports -lNGmisc2 $(NCARGGKSLIB) $(NCARGCLIB) $(CTOFLIBS) -lm -lc)
CleanFilesTarget(libNGmisc.a libNGmisc2.a libNGmp.a libNGff.a libNGcn.a libNGllu.a)

