NCARG	= ../../..

SUBDIRS = \
	areas autogrph colconv common concom conpack conran \
	conrec conterp dashchar ezmap ezmapa gflash gridal \
	hafton histgr isosrf isosrfhr labelbar ngmisc plotchar pwritx  \
	pwrity pwrzi pwrzs pwrzt softfill spps srface stitle \
	strmln support threed velvct

#ifdef  BuildNCARGSourceLibrary
all::
	@-$(RM) $(LIBPATH)/srcncarg.a
#endif

PartialLibraryRoot(libncarg.a,$(SUBDIRS))

#ifdef  BuildNCARGSourceLibrary
all::
	$(RANLIB) $(LIBPATH)/srcncarg.a
#endif
