#
#
#	$Id: yMakefile,v 1.16 1994-08-05 23:03:39 boote Exp $
#
#
#	Makefile for libncarg_c -- NCAR G common C utilities
#
#

MYNAME		= libncarg_c.a

#ifdef	VMS
VMSOBJS		= vms-unix.o
VMSSRCS		= vms-unix.c
#endif

HDRS		= c.h 
SRCS		= options.c misc.c ncarg_path.c version.c \
		error.c atoargv.c usleep.c env.c $(VMSSRCS)
OBJS		= options.o misc.o ncarg_path.o version.o \
		error.o atoargv.o usleep.o env.o $(VMSOBJS)

#if defined(IRIX) && (MAJOR == 5)
MY_DEFINES = -D_BSD_TYPES
#endif

EXTRA_CDEFINES =	$(VDEFINE) $(NGENVDEF) $(MY_DEFINES)

LibraryTarget($(MYNAME),$(OBJS))
InstallTarget($(HDRS),$(INSTALL_INC),$(NCARGINCPATH))
BuildIncludes($(HDRS),ncarg,..)
DependTarget($(SRCS))
