MYNAME		= libngo

#ifdef	DEBUG
DEBUG_LIB	=	$(XMULIB)
#endif

EXTRA_CDEFINES	=	$(OS_DEF)
CLIENT_LIBS	=	$(NCLAPILIB) $(HLULIB) $(XMOTIFCLIENTLIBS) $(DEBUG_LIB) -lc

HDRS		= ngoP.h ngo.h appP.h app.h nclstateP.h nclstate.h \
		$(XHDRS)
SRCS		= ngo.c app.c nclstate.c $(XSRCS)
OBJS		= ngo.o app.o nclstate.o $(XOBJS)

XHDRS		= xappP.h xapp.h goP.h go.h ncleditP.h ncledit.h xutil.h \
		loadP.h load.h
XSRCS		= xapp.c go.c ncledit.c xutil.c load.c
XOBJS		= xapp.o go.o ncledit.o xutil.o load.o


BuildLibTarget($(MYNAME),$(OBJS))
BuildSharedLibTarget(libNGgo,$(OBJS),1,0,$(CLIENT_LIBS))
BuildIncludes($(HDRS),ncarg/ngo,../..)
DependTarget($(SRCS))
