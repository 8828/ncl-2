MYNAME		= libngo

#ifdef	DEBUG
DEBUG_LIB	=	$(XMULIB)
#endif

EXTRA_CDEFINES	=	$(OS_DEF)
CLIENT_LIBS	=	$(NCLAPILIB) -lXcb $(HLULIB) -lXmL $(XMOTIFCLIENTLIBS) $(DEBUG_LIB) -lc

HDRS		= ngoP.h ngo.h appP.h app.h nclstateP.h nclstate.h util.h \
		$(XHDRS)
SRCS		= ngo.c app.c nclstate.c util.c $(XSRCS)
OBJS		= ngo.o app.o nclstate.o util.o $(XOBJS)

XHDRS		= xappP.h xapp.h goP.h go.h ncleditP.h ncledit.h xutil.h \
		loadP.h load.h addfileP.h addfile.h mwinP.h mwin.h \
		xwkP.h xwk.h diminfogrid.h diminfogridP.h attrinfogrid.h \
		attrinfogridP.h vcrcontrol.h vcrcontrolP.h browse.h browseP.h \
		varmenus.h varmenusP.h filetree.h filetreeP.h sort.h \
		vartree.h vartreeP.h datagrid.h datagridP.h stringutil.h \
		filepageP.h varpage.h varpageP.h shaper.h shaperP.h \
		shapeinfogrid.h shapeinfogridP.h createmenus.h createmenusP.h \
		hlupage.h hlupageP.h datasinkgrid.h datasinkgridP.h \
		restree.h restreeP.h MegaB.h MegaBP.h
XSRCS		= xapp.c go.c ncledit.c xutil.c load.c addfile.c mwin.c \
		xwk.c diminfogrid.c attrinfogrid.c vcrcontrol.c browse.c \
		varmenus.c filetree.c sort.c vartree.c datagrid.c MegaB.c \
		stringutil.c filepage.c varpage.c shaper.c shapeinfogrid.c \
		createmenus.c hlupage.c datasinkgrid.c restree.c
XOBJS		= xapp.o go.o ncledit.o xutil.o load.o addfile.o mwin.o \
		xwk.o diminfogrid.o attrinfogrid.o vcrcontrol.o browse.o \
		varmenus.o filetree.o sort.o vartree.o datagrid.o MegaB.o \
		stringutil.o filepage.o varpage.o shaper.o shapeinfogrid.o \
		createmenus.o hlupage.o datasinkgrid.o restree.o

BuildSharedLibTarget(libNGgo,$(OBJS),1,0,NullArgument)
BuildLibTarget($(MYNAME),$(OBJS))
BuildIncludes($(HDRS),ncarg/ngo,../..)
DependTarget($(SRCS))
