MYNAME		= libngo

#ifdef	RESDEBUG
DEBUG_LIB	=	$(XMULIB)
#endif

#if	defined(Solaris) || defined(IRIX64)
#define	DoDceHacks
#endif

#ifdef	DoDceHacks
DCEDEF		=	-DDCEHACKS
DCEXHDRS	= CascadeBGP.h ToggleBGP.h
DCEXSRCS	= CascadeBG.c ToggleBG.c
DCEXOBJS	= CascadeBG.o ToggleBG.o
#endif

EXTRA_CDEFINES	=	$(OS_DEF) $(DCEDEF) -DNGOLIB
CLIENT_LIBS	=	$(NCLAPILIB) -lXcb $(HLULIB) $(XMOTIFCLIENTLIBS) \
			$(DEBUG_LIB) -lc

HDRS		= ngoP.h ngo.h appP.h app.h nclstateP.h nclstate.h util.h \
		$(XHDRS) $(DCEXHDRS)
SRCS		= ngo.c app.c nclstate.c util.c $(XSRCS) $(DCEXSRCS)
OBJS		= ngo.o app.o nclstate.o util.o $(XOBJS) $(DCEXOBJS)

XHDRS		= xappP.h xapp.h goP.h go.h ncleditP.h ncledit.h xutil.h \
		loadP.h load.h addfileP.h addfile.h mwinP.h mwin.h \
		xwkP.h xwk.h diminfogrid.h diminfogridP.h attrinfogrid.h \
		attrinfogridP.h vcrcontrol.h vcrcontrolP.h browse.h browseP.h \
		varmenus.h varmenusP.h filetree.h filetreeP.h sort.h \
		vartree.h vartreeP.h datagrid.h datagridP.h stringutil.h \
		filepageP.h varpage.h varpageP.h shaper.h shaperP.h \
		shapeinfogrid.h shapeinfogridP.h createmenu.h createmenuP.h \
		hlupage.h hlupageP.h datasourcegrid.h datasourcegridP.h \
		restree.h restreeP.h MegaB.h MegaBP.h graphic.h \
		plotspecmenu.h plotspecmenuP.h Folder.h FolderP.h \
		Grid.h GridP.h Tree.h TreeP.h XmL.h htmlview.h htmlviewI.h \
		htmlviewP.h print.h printP.h CascadeBG.h ToggleBG.h \
		colormap.h colormapP.h xinteract.h xinteractP.h \
		dataprofile.h htmlpage.h htmlpageP.h

XSRCS		= xapp.c go.c ncledit.c xutil.c load.c addfile.c mwin.c \
		xwk.c diminfogrid.c attrinfogrid.c vcrcontrol.c browse.c \
		varmenus.c filetree.c sort.c vartree.c datagrid.c MegaB.c \
		stringutil.c filepage.c varpage.c shaper.c shapeinfogrid.c \
		createmenu.c hlupage.c datasourcegrid.c restree.c graphic.c \
		plotspecmenu.c Folder.c Grid.c Tree.c XmL.c htmlview.c \
		print.c colormap.c xinteract.c dataprofile.c htmlpage.c

XOBJS		= xapp.o go.o ncledit.o xutil.o load.o addfile.o mwin.o \
		xwk.o diminfogrid.o attrinfogrid.o vcrcontrol.o browse.o \
		varmenus.o filetree.o sort.o vartree.o datagrid.o MegaB.o \
		stringutil.o filepage.o varpage.o shaper.o shapeinfogrid.o \
		createmenu.o hlupage.o datasourcegrid.o restree.o graphic.o \
		plotspecmenu.o Folder.o Grid.o Tree.o XmL.o htmlview.o \
		print.o	colormap.o xinteract.o dataprofile.o htmlpage.o

BuildSharedLibTarget(libNGgo,$(OBJS),1,0,NullArgument)
BuildLibTarget($(MYNAME),$(OBJS))
BuildIncludes($(HDRS),ncarg/ngo,../..)
DependTarget($(SRCS))
