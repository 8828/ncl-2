		XyPlot.o ResList.o

LibraryTarget($(MYNAME),$(OBJS))
BuildIncludes($(HDRS),ncarg/hlu,../..)
InstallTarget($(HDRS),$(INSTALL_INC),$(HLUINCPATH))
InstallTarget(hluresfile,$(INSTALL_INC),$(LIBNCARGPATH))
DependTarget($(SRCS))

#if	defined(DEBUG) && defined(SunOS)  && defined(ExpandMacros)

/* This is used to expand the huge macros in this file	*/

CleanFilesTarget(CoordArrTable.tmp.o CoordArrTable.tmp.c CoordArrTable.sed.c)

CoordArrTable.o:	CoordArrTable.tmp.o
	$(CP) CoordArrTable.tmp.o CoordArrTable.o

CoordArrTable.tmp.c:	CoordArrTable.sed.c
	acc -Xc -P CoordArrTable.sed.c
	perl -n \
	-e "s%^SED_INC%#include%;" \
	-e "print;" \
	< CoordArrTable.sed.i > CoordArrTable.tmp.c
	indent CoordArrTable.tmp.c

CoordArrTable.sed.c:	Makefile CoordArrTable.c
	perl -n \
	-e "s%^#include%SED_INC%;" \
	-e "print;" \
	< CoordArrTable.c > CoordArrTable.sed.c
#endif
